<h1>Display Page</h1>

<table>
  <thead>
    <tr>
      <th>Repo Name</th>
      <th>Description</th>
      <th>Last Update</th>
    </tr>
  </thead>
  <tbody>
    <% @repositories.each do |r| %>
      <tr>
        <td><%= r.name %></td>
        <td><%= r.description %></td>
        <td><%= r.last_update.strftime '%b %d' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>Stuff was: <%= @repositories %></div>